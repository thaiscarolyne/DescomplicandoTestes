<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DescomplicandoTestes.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="GillSans">
                <On Platform="Android" Value="gill-sans-bold.ttf#Gill Sans"/>
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="BoldGillSans">
                <On Platform="Android" Value="gill-sans-ultra-bold.ttf#Bold Gill Sans"/>
            </OnPlatform>
        </ResourceDictionary>        
    </Application.Resources>
</Application>